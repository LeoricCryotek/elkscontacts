<!-- elkscontacts/data/elks_cron.xml -->
<odoo>
  <data noupdate="1">
    <record id="ir_cron_update_is_dues_paid" model="ir.cron">
      <field name="name">Elks: Update Dues Paid Flag</field>
      <field name="model_id" ref="base.model_res_partner"/>
      <field name="state">code</field>
      <field name="code">model.cron_update_is_dues_paid()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="active">True</field>
      <!-- Optional: set which user executes the cron -->
      <field name="user_id" ref="base.user_root"/>
      <!-- Optional: set an initial next run (otherwise set it in UI) -->
      <!-- <field name="nextcall">2025-10-03 00:05:00</field> -->
    </record>
  </data>
</odoo>
